<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/filter"
    android:layout_width="match_parent"
    android:layout_height="250dip"
    android:minWidth="350dip"
    android:background="@drawable/edit"
    android:orientation="vertical"
    android:padding="10dp">

    <!-- android:background="@drawable/popup" -->

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip">

        <EditText
            android:id="@+id/min"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtDesc"
            android:ems="10"
            android:gravity="right"
            android:hint="حداقل قیمت "
            android:textSize="16dip" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="5dip">

        <EditText
            android:id="@+id/max"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtName"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:gravity="right"
            android:hint=" حداکثر قیمت"
            android:textSize="16dip" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/Filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/button"
        android:drawableRight="@drawable/filter"
        android:text="فیلترکردن"
        android:textSize="16dp"/>

</LinearLayout><!--     app:thumbDisabled="@drawable/custom_slider_thumb" --><!--     app:thumbNormal="@drawable/custom_slider_thumb" --><!--     app:thumbPressed="@drawable/custom_slider_thumb" --><!--     app:thumbShadowColor="@color/primary_material_light" -->
