<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sort"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <!-- android:background="@drawable/popup" -->

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@drawable/border"
    android:minWidth="300dip"
    android:orientation="vertical"
    android:padding="1dp" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:background="#267d5a"
        android:textColor="#fff"
        android:textStyle="bold"
        android:text="مرتب سازی" />

<RadioGroup
    android:id="@+id/radioGroup1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
     >

    <RadioButton
        android:id="@+id/radioButton5"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:drawableRight="@drawable/radiobutton"
        android:drawablePadding="5dp"
        android:button="@null"
        android:gravity="right|center_vertical"
        android:textSize="13sp"
        android:checked="true"     
        android:text="براساس جدیدترین" />

    <RadioButton
        android:id="@+id/radioButton1"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:drawableRight="@drawable/radiobutton"
        android:drawablePadding="5dp"
        android:button="@null"
        android:gravity="right|center_vertical"
        android:textSize="13sp"
        android:text="براساس کمترین قیمت" />

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:drawableRight="@drawable/radiobutton"
        android:drawablePadding="5dp"
        android:button="@null"
        android:gravity="right|center_vertical"
        android:textSize="13sp"
        android:text="براساس بیشترین قیمت" />

    <RadioButton
        android:id="@+id/radioButton3"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:drawableRight="@drawable/radiobutton"
        android:drawablePadding="5dp"
        android:button="@null"
        android:gravity="right|center_vertical"
        android:textSize="13sp"
        android:text="براساس بیشترین تخفیف" />

    <RadioButton
        android:id="@+id/radioButton4"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:drawableRight="@drawable/radiobutton"
        android:drawablePadding="5dp"
        android:button="@null"
        android:gravity="right|center_vertical"
        android:textSize="13sp"
        android:text="براساس پروفروش ترین" />

    <RadioButton
        android:id="@+id/radioButton6"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:drawableRight="@drawable/radiobutton"
        android:drawablePadding="5dp"
        android:button="@null"
        android:gravity="right|center_vertical"
        android:textSize="13sp"
        android:text="براساس پر بازدیدترین" />
</RadioGroup>
</LinearLayout>
</RelativeLayout>