<resources>

    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Material.Light">
        <!-- API 11 theme customizations can go here. -->
        <item name="android:colorPrimary">#267d5a</item>
        <item name="android:colorPrimaryDark">#065d3a</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="android:Theme.Material.Light.DarkActionBar" >
        <item name="android:textColorPrimary">@color/white</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="android:Theme.Material.Light" >
    </style>


</resources>

