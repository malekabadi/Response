<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="fill"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#eee"
    tools:context=".MainActivityOLD" >

<Button
        android:id="@+id/id"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="@drawable/button"
        android:layout_marginTop="5dp"
        android:textSize="18sp"
        android:text="091111111" />
    
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="fill"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_below="@+id/id" 
    android:orientation="vertical">
    
    <LinearLayout
        android:id="@+id/btn1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/edit"
        android:layoutDirection="rtl"
        android:layout_weight="1" >
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/shop" />
        
        <TextView
            android:id="@+id/t1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="فروشگاه من" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/btn2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/edit"
        android:layout_marginTop="5dp"
        android:layoutDirection="rtl"
        android:layout_weight="1" >
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/pass" />
        
        <TextView
            android:id="@+id/t2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="تغییر رمز ورود" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/btn3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/edit"
        android:layout_marginTop="5dp"
        android:layoutDirection="rtl"
        android:layout_weight="1" >
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/euser" />
        
        <TextView
            android:id="@+id/t3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="مشخصات فردی" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/btn4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/edit"
        android:layout_marginTop="5dp"
        android:layoutDirection="rtl"
        android:layout_weight="1" >
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/addr" />
        
        <TextView
            android:id="@+id/t4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="آدرس ها" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/btn9"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/edit"
        android:layout_marginTop="5dp"
        android:enabled="false"
        android:layoutDirection="rtl"
        android:layout_weight="1" >
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/list2" />
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:enabled="false"
            android:text="لیست خرید ها" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/btn6"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/edit"
        android:layout_marginTop="5dp"
        android:enabled="false"
        android:layoutDirection="rtl"
        android:layout_weight="1" >
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/heart" />
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:enabled="false"
            android:text="گزینه های انتخابی" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/btn7"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/edit"
        android:layout_marginTop="5dp"
        android:enabled="false"
        android:layoutDirection="rtl"
        android:layout_weight="1" >
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/eye" />
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:enabled="false"
            android:text="بازدید های اخیر" />

    </LinearLayout>
	
    <LinearLayout
        android:id="@+id/btn8"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/edit"
        android:layout_marginTop="5dp"
        android:layoutDirection="rtl"
        android:layout_weight="1" >
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/remov" />
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="حذف حساب کاربری" />

    </LinearLayout>
	
</LinearLayout>
