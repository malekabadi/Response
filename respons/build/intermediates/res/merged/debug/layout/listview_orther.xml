<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/android_custom_gridview_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/shadow"
    android:padding="0dp" >

	<TextView
	    android:id="@+id/cart_text1"
	    android:layout_width="wrap_content"
	    android:layout_height="30dp"
	    android:layout_alignParentRight="true"
	    android:layout_alignParentTop="true"
	    android:gravity="right"
	    android:padding="4dp"
	    android:text="ش فاکتور :"
	    android:textSize="15sp" />
	
	<TextView
	    android:id="@+id/number"
	    android:layout_width="wrap_content"
	    android:layout_height="30dp"
	    android:layout_alignParentTop="true"
	    android:layout_toLeftOf="@+id/cart_text1"
	    android:layout_toRightOf="@+id/btnDel"
	    android:gravity="right"
	    android:padding="4dp"
	    android:text="000"
	    android:textSize="15sp" />
	
	<TextView
	    android:id="@+id/price"
	    android:layout_width="133dp"
	    android:layout_height="30dp"
	    android:layout_marginTop="3dp"
	    android:gravity="left"
	    android:text="مبلغ"
	    android:textColor="#800"
	    android:textSize="15sp" />
			

<LinearLayout
    android:id="@+id/linear1"
    android:layout_width="fill_parent"
    android:layout_height="35dp" 
    android:layout_below="@+id/number"
    android:paddingTop="0dp"
    android:orientation="horizontal">
    	
	<Button
	    android:id="@+id/btnDet"
	    android:layout_width="80dp"
	    android:layout_height="30dp"
	    android:background="@drawable/button"
	    android:layout_marginTop="5dp"
	    android:text="جزئیات"
	    android:textColor="#000" />

	<TextView
	    android:id="@+id/customer"
	    android:layout_width="match_parent"
	    android:layout_height="30dp"
	    android:background="@drawable/edit"
	    android:layout_marginTop="1dp"
	    android:gravity="right"
	    android:text="خریدار"
	    android:textSize="15sp" />
</LinearLayout>	
	
	<View 
        android:layout_width="fill_parent"
        android:layout_below="@+id/linear1"
        android:background="@drawable/shadowb"
    	android:layout_height="4dip">
    </View>

		
</RelativeLayout>
</RelativeLayout>
