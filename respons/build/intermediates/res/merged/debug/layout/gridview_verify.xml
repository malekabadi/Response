<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/android_custom_gridview_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

<RelativeLayout    
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="20dp"
    android:padding="0dp"
    android:background="@drawable/shadow">
    
    <ImageView
        android:id="@+id/cart_image"
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:layout_marginTop="15dp" 
        android:layout_marginLeft="15dp"
        android:background="@drawable/edit"
        />

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="200dip"
        android:layout_height="70dip"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/cart_image"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/cart_image"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/cart_text1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="عنوان"
            android:gravity="right"
            android:padding="2dp"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/cart_text2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cart_text1"
            android:layout_marginTop="5dp"
            android:text="توضیحات"
            android:padding="2dp"
            android:gravity="right"
            
            android:textSize="13sp" />

    </LinearLayout>
    
    <TextView
        android:id="@+id/cart_text3"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignRight="@+id/linear1"
        android:layout_below="@+id/linear1"
        android:layout_marginTop="5dp"
        android:gravity="right"
        android:text="تعداد :"
        android:textSize="14sp" />
    
    <Button
        android:id="@+id/Count"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/cart_text3"
        android:layout_alignBottom="@+id/cart_text3"
        android:layout_toLeftOf="@+id/cart_text3"
        android:layout_marginRight="10dp"
        android:text="1" />
    
    <TextView
        android:id="@+id/price"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/cart_text3"
		android:background="@drawable/edit"
        android:layout_marginTop="10dp"
        android:gravity="right"
        android:textSize="15sp" />
    
    <TextView
        android:id="@+id/total"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/price"
        android:background="@drawable/edit"
        android:gravity="right"
        android:textSize="17sp" />

	<View 
        android:layout_width="fill_parent"
        android:layout_below="@+id/total"
        android:background="@drawable/shadowb"
    	android:layout_height="4dip">
    </View>
	    
   
</RelativeLayout>
</RelativeLayout>
