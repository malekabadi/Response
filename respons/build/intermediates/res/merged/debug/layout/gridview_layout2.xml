<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/android_custom_gridview_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:orientation="horizontal">

    
<LinearLayout 
    android:layout_width="wrap_content"
    android:layout_height="70dip"
    android:layout_marginTop="3dp" 
    android:layout_weight="1"
    android:background="@drawable/edit"
    android:orientation="vertical">
    <TextView
        android:id="@+id/gridview_text1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|right"
        android:textSize="13sp" />
    <TextView
        android:id="@+id/gridview_text2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical|right"
        android:layout_below="@+id/gridview_text1"
        android:textSize="13sp" />


    <TextView
        android:id="@+id/gridview_text3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical|right"
        android:layout_below="@+id/gridview_text2"
        android:textSize="10sp" />
</LinearLayout>

    <ImageView
        android:id="@+id/gridview_image"
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:layout_marginTop="3dp" 
        android:background="@drawable/edit"
        />

</LinearLayout>


	<View 
        android:layout_width="fill_parent"
        android:layout_below="@+id/gridview_text3"
        android:background="@drawable/shadowb"
    	android:layout_marginLeft="5dp"
    	android:layout_marginRight="5dp"
    	android:layout_height="4dip">
    </View>    
</LinearLayout>
