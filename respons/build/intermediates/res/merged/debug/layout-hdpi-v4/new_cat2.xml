<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button"
        android:gravity="center"
        android:text="عنوان گروه"
        android:textSize="14dp" />

    <LinearLayout
        android:id="@+id/LinearLayout02"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnNew"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginRight="1dip"
            android:background="@drawable/gbutton"
            android:gravity="center"
            android:text="ثیت"
            android:textColor="#fff" />

        <EditText
            android:id="@+id/editNew"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/edit"
            android:ems="10"
            android:gravity="right|center_vertical" />

    </LinearLayout>


    <TextView
        android:id="@+id/title1"
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button"
        android:gravity="center"
        android:text="مشخصه های هر گروه کالایی"
        android:textSize="14dp" />

    <LinearLayout
        android:id="@+id/LinearLayout03"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginRight="1dip"
            android:background="@drawable/gbutton"
            android:text="اضافه"
            android:textColor="#fff" />

        <EditText
            android:id="@+id/editPty"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginTop="1dip"
            android:background="@drawable/edit"
            android:ems="10" />

    </LinearLayout>

    <ListView
        android:id="@+id/list_topic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="0dp"
        android:layout_weight="2.36"
        android:background="@drawable/listv"
        android:textSize="12pt">

    </ListView>


</LinearLayout>